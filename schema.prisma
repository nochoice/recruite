datasource sqlite {
  url      = env("DATABASE_URL")
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  age      Int?
  isGreen  Int?
  password String
  posts    Post[] @relation("Post_author")
}

model Post {
  id          String    @id @default(cuid())
  title       String    @default("")
  status      String?   @default("draft")
  content     String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  publishDate DateTime?
  author      User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId    String?   @map("author")
  tags        Tag[]     @relation("Post_tags")
  addresses   Address[] @relation("Post_addresses")

  @@index([authorId])
}

model Company {
  id         String    @id @default(cuid())
  name       String    @default("")
  isComplete Boolean   @default(false)
  isObsolet  Boolean   @default(false)
  addresses  Address[] @relation("Company_addresses")
}

model Interview {
  id    String @id @default(cuid())
  title String @default("")
}

model Candidate {
  id    String @id @default(cuid())
  title String @default("")
}

model Address {
  id                     String    @id @default(cuid())
  addressCountry         String    @default("")
  addressLocality        String    @default("")
  postalCode             String    @default("")
  postOfficeBoxNumber    String    @default("")
  streetAddress          String    @default("")
  from_Post_addresses    Post[]    @relation("Post_addresses")
  from_Company_addresses Company[] @relation("Company_addresses")
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}